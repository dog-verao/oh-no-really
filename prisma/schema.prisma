generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id            String         @id @default(cuid())
  name          String
  apiKey        String         @unique @default(cuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  users         AccountUser[]
  announcements Announcement[]
  flows         Flow[]
  themes        Theme[]
}

model AccountUser {
  id        String   @id @default(cuid())
  accountId String
  userId    String // This references Supabase auth.users.id
  role      String
  createdAt DateTime @default(now())
  account   Account  @relation(fields: [accountId], references: [id])
}

model Theme {
  id            String         @id @default(cuid())
  accountId     String
  name          String
  config        Json
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  announcements Announcement[]
  flows         Flow[]
  account       Account        @relation(fields: [accountId], references: [id])
}

model Announcement {
  id          String    @id @default(cuid())
  accountId   String
  themeId     String?
  createdBy   String? // This references Supabase auth.users.id
  title       String
  message     String
  buttons     Json?
  placement   String    @default("modal")
  draft       Boolean   @default(true)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  account     Account   @relation(fields: [accountId], references: [id])
  theme       Theme?    @relation(fields: [themeId], references: [id])
}

model Flow {
  id          String    @id @default(cuid())
  accountId   String
  themeId     String?
  name        String
  steps       Json
  draft       Boolean   @default(true)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  account     Account   @relation(fields: [accountId], references: [id])
  theme       Theme?    @relation(fields: [themeId], references: [id])
}
